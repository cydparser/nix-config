# exports

export RUBY_GC_HEAP_INIT_SLOTS=2000000
export RUBY_HEAP_FREE_MIN=20000
export RUBY_GC_MALLOC_LIMIT=100000000

export RBENV_JRUBY="RBENV_VERSION=jruby-1.7.18"

# aliases

alias be='bundle exec'
alias pryc='pry -r ./config/environment'
alias ruby-lint='ruby-lint --config $XDG_CONFIG_HOME/ruby/ruby-lint.yml'
alias rubocop='rubocop --config $XDG_CONFIG_HOME/ruby/rubocop.yml'
alias yards='yard server --reload'

if which rbenv >/dev/null; then
  eval "$(rbenv init -)"
  alias jgem="$RBENV_JRUBY gem"
  alias jirb="$RBENV_JRUBY irb"
  alias jpry="$RBENV_JRUBY pry"
  alias jruby="$RBENV_JRUBY ruby"
  alias jbe="$RBENV_JRUBY bundle exec"
fi
